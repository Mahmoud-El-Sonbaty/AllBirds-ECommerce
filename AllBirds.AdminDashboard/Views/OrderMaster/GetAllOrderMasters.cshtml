@model List<GetAllOrderMastersDTO>
@{
    ViewData["Title"] = "GetAllOrderMasters";
    SelectList OrderState = new(ViewBag.OrderSate, "Id", "StateEn");
}

@section Navbar {

    <partial name="_NavbarPartial" />
}
@section Sidebar {

    <partial name="_SidebarPartial" />
}
@section Footer {

    <partial name="_FooterPartial" />
}

<div class="col-lg-12 grid-margin stretch-card" >
    <div class="card">
        <div class="card-body">
            <div class="table-responsive ">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th> Order Number </th>
                            <th> Client Name </th>
                            <th> Progress </th>
                            <th>Order state</th>
                            <th>Coupon Discount %</th>

                            <th> Discount Amount </th>
                            <th> Action </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if(Model is not null)
                        {
                            
                        @foreach(var item in Model)
                        {

                        <tr>
                            
                            <td>@item.OrderNo </td>
                                <td>@item.ClientName </td>
                            <td>
                               @if (item.OrderStateId == 2)
                                {
                                    <div class="progress">
                                        <div class="progress-bar bg-warning" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                }
                               else if (item.OrderStateId == 3)
                                {
                                    <div class="progress">
                                        <div class="progress-bar bg-secondary" role="progressbar" style="width: 40%" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                }
                               else if (item.OrderStateId == 4)
                                {
                                    <div class="progress">
                                        <div class="progress-bar bg-info" role="progressbar" style="width: 60%" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                }
                                else if (item.OrderStateId == 5)
                                {
                                    <div class="progress">
                                        <div class="progress-bar bg-primary" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                }
                                else if (item.OrderStateId == 6)
                                {
                                    <div class="progress">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                }
                                else
                                {
                                    <div class="progress">
                                        <div class="progress-bar bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                }

                            </td>

                            <td>
                                @if (item.OrderStateId == 2)
                                {
                                    <label class="badge badge-warning">@item.OrderStateName</label>
                                }
                                else if (item.OrderStateId == 3)
                                {
                                    <label class="badge badge-secondary">@item.OrderStateName</label>
                                }
                                else if (item.OrderStateId == 4)
                                {
                                    <label class="badge badge-info">@item.OrderStateName</label>
                                }
                                else if (item.OrderStateId == 5)
                                {
                                    <label class="badge badge-primary">@item.OrderStateName</label>
                                }
                                else if (item.OrderStateId == 6)
                                {
                                    <label class="badge badge-success">@item.OrderStateName</label>
                                }
                                else
                                {
                                    <label class="badge badge-danger">@item.OrderStateName</label>
                                }
                             </td>
                                <td> @item.DiscountPerctnage</td>
                                <td> @item.Total</td>
                            <td>
             @*                     <button class="btn btn-inverse-success for inverse buttons p-2  m-1" onclick="changingState(3,@Model.Id)">Aprove</button>
                                 <button class="btn btn-inverse-danger  for inverse buttons p-2  m-1" onclick="changingState(4,@Model.Id)">Rejecte</button> *@

                                <div class="mb-3" >
                                    <select class="form-select bg-light text-dark" aria-label="Action select" style="width: auto;" onchange="changingState(this.value, @item.Id)">
                                        @foreach (CUOrderStateDTO state in ViewBag.OrderSate)
                                        {
                                            @if (state.Id == item.OrderStateId)
                                            {
                                                <option value="@state.Id" selected>@state.StateEn</option>
                                            }
                                            <option value="@state.Id">@state.StateEn</option>
                                        }
                                    </select> 
                                </div>
                            </td>
                        </tr>
                            
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center">
                                    No Orders Found
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


 <script>
   



    function changingState(state, orderID) {
        $.ajax({
            url: `/OrderMaster/changingState/?stateID=${state}&&orderID=${orderID}`,
            type: 'GET',
              success: function (res) {
                console.log("State changed successfully for Order ID: ", orderID);
                // Optional: If you want to reload part of the page or update a section
                // $("#Table").html(res);
            },
            error: function (err) {
                console.error("Error changing state", err);
            }
        });
    }

</script>