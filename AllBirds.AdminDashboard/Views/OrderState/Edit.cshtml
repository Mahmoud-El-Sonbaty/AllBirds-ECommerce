@model CUOrderStateDTO

@section Navbar {

    <partial name="_NavbarPartial" />
}
@section Sidebar {

    <partial name="_SidebarPartial" />
}
@section Footer {

    <partial name="_FooterPartial" />
}
@if (TempData["IsSuccess"] is bool Success)
{
    @if (Success)
    {
        <div id="msgDiv" class="alert alert-success text-dark" role="alert">
            <span>@TempData["Msg"]</span> <button onclick="closeMsg(event)" class="btn btn-outline-danger"><i class="mdi mdi-close"></i></button>
        </div>
    }
    else
    {
        <div id="msgDiv" class="alert alert-danger text-dark" role="alert">
            <span>@TempData["Msg"]</span> <button onclick="closeMsg(event)" class="btn btn-outline-danger"><i class="mdi mdi-close"></i></button>
        </div>
    }
}
<h1>Update Order State</h1>
<div class="card">
    <div class="card-body">
        @* <h4 class="card-title">Edit Order State</h4> *@
        <form method="post">
            <div class="form-group">
                <label asp-for="StateAr"></label>
                <input asp-for="StateAr" value="@Model.StateAr" class="form-control">
                <span class="text-danger" asp-validation-for="StateAr"></span>
            </div>
            <div class="form-group">
                <label asp-for="StateEn"></label>
                <input asp-for="StateEn" value="@Model.StateEn" class="form-control">
                <span class="text-danger" asp-validation-for="StateEn"></span>
            </div>
            <button type="submit" class="btn btn-primary mr-2">Save</button>
            <a asp-controller="Color" asp-action="GetALLForC_CO_S_OS" class="btn btn-dark">Cancel</a>
        </form>
    </div>
</div>
