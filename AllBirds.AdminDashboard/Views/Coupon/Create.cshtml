@model CUCouponDTO

@section Navbar {

    <partial name="_NavbarPartial" />
}
@section Sidebar {

    <partial name="_SidebarPartial" />
}
@section Footer {

    <partial name="_FooterPartial" />
}

@if (TempData["IsSuccess"] is bool Success)
{
    @if (Success)
    {
        <div id="msgDiv" class="alert alert-success text-dark" role="alert">
            <span>@TempData["Msg"]</span> <button onclick="closeMsg(event)" class="btn btn-outline-danger"><i class="mdi mdi-close"></i></button>
        </div>
    }
    else
    {
        <div id="msgDiv" class="alert alert-danger text-dark" role="alert">
            <span>@TempData["Msg"]</span> <button onclick="closeMsg(event)" class="btn btn-outline-danger"><i class="mdi mdi-close"></i></button>
        </div>
    }
}
<h4 class="card-title">Create Coupon</h4>
<div class="card">
    <div class="card-body">
        @* <h4 class="card-title">Create Coupon</h4> *@
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Code">Coupon Code</label>
                <input type="text" class="form-control" asp-for="Code" maxlength="8" />
            </div>

            <div class="form-group">
                <label asp-for="Discount">Discount (%)</label>
                <input type="number" class="form-control" asp-for="Discount" min="0" max="100" />
            </div>

            <div class="form-check form-check-flat form-check-primary">
                <label asp-for="IsActive" class="form-check-label">
                    <input type="checkbox" class="form-check-input" asp-for="IsActive"> Active
                </label>
            </div>

            <button type="submit" class="btn btn-primary mr-2">Create</button>
            <a asp-controller="Color" asp-action="GetALLForC_CO_S_OS" class="btn btn-dark">Cancel</a>
        </form>
    </div>
</div>
